{
    "name": "nestjs-starter-kit",
    "version": "0.0.1",
    "description": "",
    "author": "vladimir.ghrejyan@gmail.com",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "start": "NODE_ENV=production nest start",
        "start:dev": "NODE_ENV=development nest start --watch",
        "start:debug": "NODE_ENV=development nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/src/main",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "migration:generate": "node ./scripts/migration.js generate $1",
        "migration:create": "node ./scripts/migration.js create $1",
        "migration:run": "node ./scripts/migration.js run",
        "migration:revert": "node ./scripts/migration.js revert",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/typeorm": "^11.0.0",
        "cross-env": "^10.0.0",
        "dotenv": "^17.2.2",
        "nestjs-zod": "^5.0.1",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.27",
        "typeorm-naming-strategies": "^4.1.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@commitlint/format": "^19.8.1",
        "@commitlint/types": "^19.8.1",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "conventional-changelog-atom": "^5.0.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^30.0.0",
        "lint-staged": "^16.1.6",
        "prettier": "^3.4.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
